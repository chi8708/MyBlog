@using Blog.Entity.Mapping;
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    var articles= ViewBag.Articles as List<Blog.Entity.Mapping.Article>;
}

<div class="container" style="width:100%;">

    <div class="row section topspace">
        <div class="col-md-12">
