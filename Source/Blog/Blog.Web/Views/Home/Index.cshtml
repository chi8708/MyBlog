    <div class="row section featured topspace">
        <h2 class="section-title"><span>博客</span></h2>
        <div class="row">
            @foreach (var article in articles)
            {
                <div class="col-sm-6 col-md-3">
                    <h3 class="text-center" style="text-overflow:ellipsis;">
                        <a href="@Url.Action("Detail", "Article", new { id=article.Id})" target="_blank">@Blog.Common.StringUtil.GetSubString(article.Title, 14, "...")</a> 
                    </h3>
                    <p class="t-lr articleContentCut">@(Blog.Common.StringUtil.ReplaceHtmlTag(article.Content, 80) + "...")</p>
                    <p class="text-center"><a href="@Url.Action("Detail", "Article", new { id=article.Id})" target="_blank" class="btn btn-action">详细</a></p>
                </div>
            }

        </div>
