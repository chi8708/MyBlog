@{
    ViewBag.Title = "关于";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    var type = Request.QueryString["Type"] ?? "A";
}
@section headers{
    <style type="text/css">
        .eduTime, .eduCom {
            display: inline-block;
        }

        .eduTime {
            width: 200px;
        }

        .eduCom {
            width: 300px;
        }
    </style>
}

<div class="container">

    <div class="row topspace">

        <!-- Sidebar -->
        <aside class="col-sm-2 sidebar sidebar-right">
            <ul class="nav text-right nav-side">
                <li class="@(type=="A"? "active":"")"><a href="@Url.Action("Index", new {Type="A" })">关于我</a></li>
                <li class="@(type == "B" ? "active" : "")"><a href="@Url.Action("Index", new {Type="B" })">专业技能</a></li>
                <li class="@(type == "C" ? "active" : "")"><a href="@Url.Action("Index", new {Type="C" })">联系方式</a></li>
            </ul>

        </aside>
        <!-- /Sidebar -->
        <!-- Article main content -->
        <article class="col-sm-10 maincontent post">
            @{
                switch (type)
                {
                    case "A":
                        <h2 class="section-title"><span>关于我</span></h2>
                        <h5>教育及工作经历</h5>
                        <ul>
                            <li><span class="eduTime">2014·7—至今</span><span class="eduCom">江苏东方不锈钢电子交易中心</span>.Net Web不锈钢电商平台</li>
                            <li><span class="eduTime">2012·7—2014·5</span><span class="eduCom">云南恩裕科技开发有限公司 </span>.Net Web招投标软件开发</li>
                            <li><span class="eduTime">2008·9—2012·6 </span><span class="eduCom">云南农业大学电子商务专业</span></li>
                        </ul>
                        <h5>自我评价</h5>
                        <p style="text-indent:1.5em;">大龄单身程序员一枚。 磕磕碰碰一路走来，小完美主义，爱学习，爱运动，追求桃园般生活....</p>
                        break;

                    case "B":
                    <h2 class="section-title"><span>专业技能</span></h2>
                    <div class="progress">
                        <span>  C# + .Net</span>
                        <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                    <div class="progress">
                        <span>JS + Html + CSS</span>
                        <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                    <div class="progress">
                        <span>SQL + NOSQL</span>
                        <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                    <div class="progress">
                        <span>设计模式 + 软件架构</span>
                        <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                        break;

                    case "C":
                    <h2 class="section-title"><span>联系方式</span></h2>
                    <p>邮箱:cts@ctsdns.com</p>
                    <p>地址:江苏省无锡市锡山区东北塘</p>
                        break;

                }
            }
        </article>
        <!-- /Article -->
    </div>
</div>	<!-- /container -->
